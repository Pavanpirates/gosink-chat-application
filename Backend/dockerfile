# Use a stable, supported Java runtime (no 'slim' version)
FROM openjdk:17-jdk

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Grant permission to mvnw if needed
RUN chmod +x ./mvnw

# Build the JAR (skip tests for faster build)
RUN ./mvnw clean package -DskipTests

# Expose the port for Render
EXPOSE 8080

# Run the JAR
CMD ["java", "-jar", "target/*.jar"]
